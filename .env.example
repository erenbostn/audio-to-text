# GroqWhisper Desktop Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: .env contains sensitive data and should NEVER be committed to git

# Groq API Key (required)
# Get your API key from: https://console.groq.com/keys
# Format: gsk_... (starts with "gsk_")
# SECURITY: Never share your API key or commit it to version control
GROQ_API_KEY=

# Audio Recording Settings
RECORDING_SAMPLE_RATE=16000
RECORDING_CHANNELS=1

# UI Settings
# Sound feedback on recording start/stop
PLAY_BEEP_SOUND=true

# Transcription language (tr, en, de, fr, es, it, auto)
TRANSCRIPTION_LANGUAGE=tr

# Auto-paste: simulate Ctrl+V after copying transcript
AUTO_PASTE=true

# Translate to English instead of transcribing
TRANSLATE_TO_EN=false
